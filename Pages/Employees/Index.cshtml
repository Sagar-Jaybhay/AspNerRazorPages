@page
@model asprazorpage.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>

@*<h3>Total number of employees : @Model._employeeList.Count()</h3>*@



    <div class="row">
        
        @foreach (var emp in Model._employeeList)
        {
            var imagePath =@Url.Content("/images/" + (emp.PhotoPath ?? "noimage.png"));


            <div class="card">
                <div class="card-header">@emp.Name</div>
                
                <div class="card-body">
                    <img class="card-img"  src="@imagePath"/>
                </div>
                
                <div class="card-footer align-items-center">
                    <a href="#" class="btn btn-primary">View</a>
                    <a href="#" class="btn btn-info">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }

    </div>




